<div class="flash_messages">
  <% [:success, :notice, :error, :alert].each do |type| %>
    <%- alert_class = type == :notice ? 'info' : type %>
    <% if flash[type].respond_to? :each %>
      <% flash[type].each do |msg| %>
        <div class="alert alert-<%=alert_class%>"><%= msg %>
           <a class="close" data-dismiss="alert" href="#">&times;</a>
        </div>
      <% end %>
    <% elsif flash[type] %>
      <div class="alert alert-<%=alert_class%>"><%= flash[type] %>
         <a class="close" data-dismiss="alert" href="#">&times;</a>
      </div>
    <% end %>
  <% end %>
</div>
