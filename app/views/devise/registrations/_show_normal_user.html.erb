
<% if !@user.may_lend_printed? && session[:pending_after_sign_in_path] %>
<div class="span11 alert alert-block alert-error">
  <h4>Notice</h4>
  You're about to log in to DTU Library printed collection but your
  account is not registered to order and borrow
  books. To register you must accept our payment terms and lending
  policy and register your CPR number.
</div>
<% end %>


<div class="span3">
  <h4><i class="icon-user"> </i> Your account</h4>
  <h5><%= @user.first_name %> <%= @user.last_name%></h5>
  <%= @user.email %>
</div>

<div class="span12">
  <hr/>
</div>

<div class="span12">
  <h4><i class="icon-book"></i> <%= I18n.t('riyosha.edit.lending_information') %></h4>
</div>

<% if @user.may_lend_printed? %>
  <div class="span9">
    <p><%= I18n.t('riyosha.edit.allow_lending_printed') %></p>
  </div>
  <div class="span3">
    <p><%= link_to 'Access printed collection', aleph_new_session_path(:func => 'bor-info'), :class => 'btn btn-primary' %></p>
  </div>
<% else %>
  <%= form_tag(create_dk_nemid_user_session_path, :method => :post ) do %>
    <div class="span6">
      <p><%= I18n.t('riyosha.edit.enable_lending_printed').html_safe %></p>
    </div>
    <div class="span3">
      <p>
        <%= check_box_tag :accept_payment_terms, '1', params[:accept_payment_terms]  %>
        <%= t('riyosha.edit.payment_terms').html_safe %><br/>
        <%= check_box_tag :accept_printed_terms, '1', params[:accept_printed_terms] %>
        <%= t('riyosha.edit.printed_terms').html_safe %>
      </p>
    </div>
    <div class="span3">
      <p>
        <%= label_tag :cpr1, t('riyosha.edit.cpr1') %>
        <%= text_field_tag :cpr1, params[:cpr1], :class => 'input-block-level' %>
        <%= label_tag :cpr2, t('riyosha.edit.cpr2') %>
        <%= text_field_tag :cpr2, params[:cpr2], :class => 'input-block-level' %>
        <button type="submit" class="btn btn-primary">
          <%= I18n.t('riyosha.edit.printed_signup') %>
        </button>
      </p>
    </div>
  <% end %>
<% end %>
