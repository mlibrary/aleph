<div class="row">
  <div class="span12">
    <h4><%= t('riyosha.edit.title') %></h4>
  </div>
</div>

<%= form_for(resource, :as => resource_name,
      :url => registration_path(resource_name),
      :html => { :method => :put }) do |f| %>
  <div class="row">
    <div class="span3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :autofocus => true, :tabindex => '1' %>
    </div>
    <div class="span3">
      <%= f.label :email %>
      <%= f.email_field :email, :tabindex => '3' %>
    </div>
    <div class="span3">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, :class => 'no-margin',
          :tabindex => '4' %>
    </div>
    <div class="span3">
      <label>&nbsp;</label>
      <button type="submit" class="btn btn-primary" :tabindex="7">
        <%= I18n.t('riyosha.edit.submit') %>
      </button>
    </div>
  </div>

  <div class="row">
    <div class="span3">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, :tabindex => '2' %>
    </div>
    <div class="span3">
    </div>
    <div class="span3">
      <%= f.label :password, t('riyosha.edit.new_password') %>
      <%= f.password_field :password, :autocomplete => "off",
          :class => 'no-margin', :tabindex => '5' %>
      <span class="help-block"><%= t('riyosha.edit.leave') %></span>
    </div>
  </div>
  <div class="row">
    <div class="span3 offset6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :tabindex => '6' %>
    </div>
  </div>
<% end %>

