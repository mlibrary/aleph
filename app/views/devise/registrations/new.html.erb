
  <%= render 'devise/shared/logins' %>

  <div class="row">
    <div class="span12">
      <h4>Sign Up Directly:</h4>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <%= devise_error_messages! %>
    </div>
  </div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="span3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :autofocus => true %>
    </div>
    <div class="span3">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="span3">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="span3">
      <label>&nbsp;</label>
      <button type="submit" class="btn">
        <%= I18n.t('riyosha.sign_up.submit') %>
      </button>
    </div>
  </div>

  <div class="row">
    <div class="span3">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class="span3">
      <%= f.hidden_field :user_type_id, :value => UserType.find_by_code('private').id %>
    </div>
    <div class="span3">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
<% end %>
