<ul class="inline">
<%- if @login_template != 'local_user' %>
  <li><%= link_to I18n.t('riyosha.sign_in.non_dtu'),
      new_user_session_path({ :template => 'local_user' }),
      :class => 'btn btn-small' %></li>
<% end -%>

<%- if @login_template != 'dtu_user' %>
  <li><%= link_to I18n.t('riyosha.sign_in.dtu_user'),
      new_user_session_path({ :template => 'dtu_user' }),
      :class => '' %></li>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <li><%= link_to I18n.t('riyosha.sign_up.non_dtu'),
      new_registration_path(resource_name),
      :class => 'btn btn-small' %></li>
<% end -%>
</ul>
