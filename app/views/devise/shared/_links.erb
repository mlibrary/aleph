
<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <li>
    <%= link_to t('riyosha.password.forgot.link'),
      new_password_path(resource_name) %>
  </li>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <li>
    <%= link_to t('riyosha.confirmation.link'),
      new_confirmation_path(resource_name) %>
  </li>
<% end -%>

<%- if devise_mapping.lockable? &&
       resource_class.unlock_strategy_enabled?(:email) &&
       controller_name != 'unlocks' %>
  <li>
    <%= link_to t('riyosha.unlock.link'), new_unlock_path(resource_name) %>
  </li>
<% end -%>
