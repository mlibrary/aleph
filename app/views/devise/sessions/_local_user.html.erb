
  <div class="row">
    <div class="col-md-12">
      <h5 class="dtu-red">
        <%= t('riyosha.sign_in.from_dtu') %>
      </h5>
    </div>
    <div class="col-md-6">
      <%= link_to I18n.t('riyosha.sign_in.dtu_user'), new_user_session_path({ :only => 'dtu' }), :class => 'btn btn-primary' %>
    </div>
  </div>

  <hr />
  <div class="row">
    <div class="col-md-12 mt-20">
      <h5>
        <%= t('riyosha.sign_in.non_dtu_prefix') %> -
        <%= t('riyosha.sign_in.social') %>
      </h5>
    </div>
  </div>

  <div class="row">
    <%= render 'devise/shared/logins' %>
  </div>

  <div class="row mt-20">
    <div class="col-md-12">
      <h5>
        <%= t('riyosha.sign_in.non_dtu_prefix') %> -
        <%= t('riyosha.sign_in.directly') %>
      </h5>
    </div>
  </div>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-6">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, :class => 'form-control' %>
      </div>
      <div class="col-md-6">
        <%= f.label :password %>
        <%= f.password_field :password, :class => 'form-control' %>
      </div>
      <%= hidden_field_tag 'lt', session['lt'].ticket %>
      <div class="col-md-6">
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            </label>
          </div>
        <% end -%>
      </div>
      <div class="col-md-6">
        <%- if devise_mapping.recoverable? %>
          <%= link_to t('riyosha.password.forgot.link'),
            new_password_path(resource_name) %>
        <% end -%>
      </div>

    </div>
    <div class="row mt-20">
      <div class="col-md-6">
        <%= f.submit I18n.t('riyosha.sign_in.submit'), :class => 'btn btn-primary' %>
      </div>
    </div>

  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="row mt-20">
      <div class="col-md-12">
        <b><%= t('riyosha.sign_in.new_user') %></b>
      </div>
      <div class="col-md-12 mt-20">
        <%= link_to I18n.t('riyosha.sign_up.non_dtu'),
        new_registration_path(resource_name, :service => params[:service]),
                                                      :class => 'btn btn-primary' %></li>
      </div>
    </div>

    <hr />
    <div class="row mt-20">
      <div class="col-md-12">
        <h5><%= t('riyosha.sign_in.libraries.title') %></h5>
      </div>
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-9">
            <%= link_to t('riyosha.sign_in.libraries.here'), params.merge(:controller => 'ill_users/sessions') %>
            <br />
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-20">
      <div class="col-md-12">
        <h5><%= t('riyosha.sign_in.problem') %></h5>
      </div>
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-9">
            <a href="http://api.libguides.com/api_box.php?iid=3935&bid=15458568">
              <%= t('riyosha.sign_in.help') %>
            </a>
            <br />
            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <%= link_to t('riyosha.confirmation.link'),
              new_confirmation_path(resource_name) %>
              <br />
            <% end -%>
            
            <%- if devise_mapping.lockable? &&
              resource_class.unlock_strategy_enabled?(:email) &&
                controller_name != 'unlocks' %>
              <%= link_to t('riyosha.unlock.link'), new_unlock_path(resource_name) %>
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  <% end -%>

