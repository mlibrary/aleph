<%= form_for(resource, :as => resource_name,
      :url => session_path(resource_name)) do |f| %>
<div class="row">
  <div class="offset4 span4 text-center">
    <%= hidden_field_tag 'lt', session['lt'].ticket %>
    <%= hidden_field_tag 'only', 'dtu' %>
    <button type="submit" class="btn btn-primary btn-large">
      <i class='icon-signin'></i>&nbsp;&nbsp;
      <%= t('riyosha.sign_in.dtu_user') %>
    </button>
  </div>
  <div class="offset4 span6 dtu-spacing">
    <%= t('riyosha.sign_in.dtu_affiliate') %><br />
    <%= t('riyosha.sign_in.dtu_max_use') %><br />
    <%= t('riyosha.sign_in.dtu_remember') %><br />
  </div>
</div>
<% end %>
<div class="row">
  <div class="offset4 span4 text-center dtu-spacing">
    <%= link_to I18n.t('riyosha.sign_in.non_dtu'),
      new_user_session_path({ :template => 'local_user' }),
      :class => 'btn' %>
  </div>
</div>
