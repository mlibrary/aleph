<div class="row">
  <div class="col-md-9">
    <p>Danish public libraries and danish research libraries can login
    to DTU Library printed collection with library number and a
    self-chosen password. If your library does not have a password for
    DTU Library Login, please create a new password using the link
    below the login form.</p>
  </div>
</div>
<%= form_for(resource, :as => resource_name,
      :url => session_path(resource_name)) do |f| %>
  <div class="row mt-20">
    <div class="col-md-4">
      <%= f.label :library_id %>
      <%= f.text_field :library_id, :autofocus => true, :class => 'form-control' %>
    </div>
    <div class="col-md-4">
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </label>
        </div>
      <% end -%>
    </div>
    <div class="col-md-4 mt-10">
      <%- if devise_mapping.recoverable? %>
        <%= link_to 'Create new password', new_password_path(resource_name) %>
      <% end -%>
    </div>
  </div>
  <div class="row mt-10">
    <%= hidden_field_tag 'lt', session['lt'].ticket %>
    <div class="col-md-6">
      <%= f.submit I18n.t('riyosha.sign_in.submit'), :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
