
<div class="row">
  <div class="col-md-12">
    <h4><%= t('riyosha.confirmation.title') %></h4>
  </div>
</div>

<%= form_for(resource, :as => resource_name,
      :url => confirmation_path(resource_name),
      :html => { :method => :post }) do |f| %>
<div class="row">
  <div class="col-md-3">
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true %>
  </div>
  <div class="col-md-9">
    <label>&nbsp;</label>
    <%= f.submit t('riyosha.confirmation.request'),
        :class => 'btn btn-primary' %>
  </div>
</div>

<% end %>
