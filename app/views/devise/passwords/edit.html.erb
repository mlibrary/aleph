<div class="col-md-12">
  <h4><%= t('riyosha.password.title') %></h4>
</div>

<%= form_for(resource, :as => resource_name,
    :url => password_path(resource_name),
    :html => { :method => :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  
  <div class="col-md-3">
    <%= f.label :password, t('riyosha.password.new') %>
    <%= f.password_field :password %>
  </div>
  <div class="col-md-3">
    <%= f.hidden_field :reset_password_token %>
    <%= f.label :password_confirmation, t('riyosha.password.confirm') %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="col-md-3">
    <label>&nbsp;</label>
    <button type="submit" class="btn btn-primary">
      <%= I18n.t('riyosha.password.change') %>
    </button>
  </div>

<% end %>
